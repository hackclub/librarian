generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Channel {
  id          String   @id @unique
  createdAt   DateTime @default(now())
  lat         String?
  lon         String?
  optout      Boolean  @default(false)
  locked      Boolean  @default(false)
  emoji       String?
  featured    Boolean? @default(false)
  description String?
  personal    Boolean  @default(false)
}

model User {
  id        String   @id @unique
  createdAt DateTime @default(now())
  lat       String?
  lon       String?
}
